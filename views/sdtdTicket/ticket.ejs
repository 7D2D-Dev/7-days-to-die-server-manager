<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h1>
        <%= ticket.title %>
      </h1>

      <p>
        <%= ticket.description %>
      </p>

      <h2> Player info </h2>
      <table class="table">
        <tbody>
          <tr>
            <td>Name</td>
            <td>
              <a href="/player/<%= ticket.playerInfo.id %>/profile">
                <%= ticket.playerInfo.name %>
              </a>
            </td>
          </tr>
          <tr>
            <td>Location</td>
            <td>
              <%= ticket.playerInfo.location.x %>
                <%= ticket.playerInfo.location.y %>
                  <%= ticket.playerInfo.location.z %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-2">
      <div class="btn-group btn-group-sm btn-group-vertical" role="group">

        <% if (ticket.status) { %>
          <%- include('./partials/editTicketDescriptionButton', ticket) %>
            <% } %>

              <% if (ticket.status) { %>
                <%- include('./partials/closeTicketButton', ticket) %>
                  <% } else { %>
                    <%- include('./partials/openTicketButton', ticket) %>
                      <% } %>
                        <button id="btn-toggle-inventory" class="btn btn-secondary" type="button">
                          Toggle inventory
                        </button>
                        <%- include('./partials/addCommentButton', ticket) %>
      </div>
    </div>
    <div id="player-inventory" class="col-md-4">
      <%- include('../player/partials/playerInventory', {player: ticket.playerInfo}) %>
    </div>

  </div>
  <% console.log(ticket.comments) %>

    <div class="row">
      <div class="col-md-8">
        <% comments.forEach(comment => { %>
          <%- include('./partials/ticketComment', comment) %>
            <% }) %>
      </div>
      <div class="col-md-4">
      </div>
    </div>
</div>

<script>

  $(document).ready(function () {
    $('#player-inventory').hide();
    $('#btn-toggle-inventory').click(e => {
      e.preventDefault();
      $('#player-inventory').fadeToggle();
    })
  })

</script>