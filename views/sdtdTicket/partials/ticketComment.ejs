<div id="tb-ticket-comment" class="ticket-comment ticket-comment-default">
        <div class="ticket-comment-section">
            <%= commentText %>
        </div>
        <div class="ticket-comment-desc">
            <img src="<%= userInfo.avatar %>" alt="" />
            <div class="ticket-comment-writer">
                <div class="ticket-comment-writer-name"><%= userInfo.username %></div>
                <% let commentDate = new Date(updatedAt) %>
                <div class="ticket-comment-writer-company"><%= commentDate.toDateString() %></div>
                <div class="ticket-comment-writer-company"><%= commentDate.toTimeString() %></div>
            </div>
        </div>
    </div>