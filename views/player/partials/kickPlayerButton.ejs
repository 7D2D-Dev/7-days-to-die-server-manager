<%# Requires a modalTitle and modalText attribute %>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal">
    Kick
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">
            Kick player
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="kick-player-form">
            <div class="form-group">
              <input type="text" class="form-control" id="kick-reason-input" placeholder="Enter message">
            </div>
            <input type="submit" class="fa fa-comments-o btn btn-primary" data-dismiss="modal" aria-hidden="true" id="kick-player-submit">
          </form>
        </div>
        <div class="modal-footer">
          <small> Give 'em the boot </small>
        </div>
      </div>
    </div>
  </div>


  <script>
    $(document).ready(function () {

      $('#kick-player-submit').click((event) => {
        event.preventDefault();
        reason = $('#kick-reason-input').val()
        $.ajax({
          url: `/api/player/kick`,
          data: {
            playerId: <%= player.id %>,
            reason: reason
          },
          success: (data, status, xhr) => {
            alert('Kicked player');
          },
          error: (xhr, status, error) => {
            alert('Something went wrong while trying to kick a player!');
          }
        });

      })

    })

  </script>
