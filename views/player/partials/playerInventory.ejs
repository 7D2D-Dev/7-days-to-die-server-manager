<div class="container-fluid">

  <div class="row">
      <h2> Bag </h2>
      <table class="table table-striped  table-responsive">
        <thead class="thead-default">
          <tr>
            <th>Icon</th>
            <th>Name</th>
            <th>Amount</th>
            <th>Quality</th>
          </tr>
        </thead>
        <tbody>

          <% for (let invItem of player.inventory.bag) { %>
            <% if(!_.isNull(invItem)) { %>

              <tr>
                <td scope="row">
                  <img src="../../images/sdtdicons/<%= invItem.name %>.png">
                </td>
                <td>
                  <%= invItem.name %>
                </td>
                <td>
                  <%= invItem.count %>
                </td>
                <% if (invItem.quality != -1) { %>
                  <td>
                    <%= invItem.quality %>
                  </td>
                  <% } %>
              </tr>

              <% } %>
                <% } %>

        </tbody>
      </table>
    </div>


