    <!-- COUNTRY BAN SETTINGS -->
    <div class="row">

      <div class="col-md-4">
        <small class="text-muted">Restrict certain countries' access to your server
        </small>
      </div>

      <div class="col-md-4">
        <ul class="list-group">
          <% if(!_.isNull(config.countryBanConfig) && config.countryBanConfig.enabled) {%>
            <li class="list-group-item bg-success">Enabled
            </li>
            <% } else { %>
              <li class="list-group-item bg-danger">Disabled
              </li>
              <% } %>
                <li class="list-group-item">
                  <label for="input-settings-countryBan-kickReason">Kick reason</label>

                  <input type="text" class="form-control" id="input-settings-countryBan-kickReason" placeholder="<%= config.countryBanConfig.kickMessage %>">
                </li>

                <li class="list-group-item">
                  <label for="input-settings-countryBan-country">Select country to toggle on ban list</label>
                  <select class="form-control" id="input-settings-countryBan-country">

                    <% for (let country of countryList) {%>
                      <option>
                        <%= country %>
                      </option>
                      <% } %>
                  </select>
                  <div id="input-settings-countryBan-countriesToToggle"></div>
                </li>

                <li id="input-settings-countryBan-countries" class="list-group-item">
                  Banned countries:
                  <% for (let country of config.countryBanConfig.bannedCountries) { %>
                    <%= country %>
                      <% } %>
                </li>
        </ul>
      </div>

      <div class="col-md-4">
        <% if(config.countryBanConfig.enabled) {%>
          <li id='settings-toggle-countryBan' class="btn btn-danger">
            <i class="fa fa-power-off"></i> Disable
          </li>
          <% } else { %>
            <li id='settings-toggle-countryBan' class="btn btn-success">
              <i class="fa fa-power-off"></i> Enable
            </li>
            <% } %>

              <button id="settings-reload-countryBan" class="btn btn-default btn-primary" type="button">
                <em class="glyphicon glyphicon-align-right"></em>
                <i class="fa fa-refresh" aria-hidden="true"></i> Apply changes
              </button>


      </div>

    </div>

    <script>
      let newCountries = []

      $(document).ready(function () {

        $('#input-settings-countryBan-country').change(function () {
          $('#input-settings-countryBan-countriesToToggle').append($(this).val() + " ")
          let countryCode = $(this).val().slice(0, 2)
          if (!newCountries.includes(countryCode)) {
            newCountries.push(countryCode)
          } else {
            var index = newCountries.indexOf(countryCode);
            if (index > -1) {
              newCountries.splice(index, 1);
            }
          }
        })

        $('#settings-toggle-countryBan').click((event) => {
          event.preventDefault();
          $.ajax({
            url: `/api/sdtdserver/togglecountryban`,
            type: "POST",
            data: {
              _csrf: window.SAILS_LOCALS._csrf,
              serverId: <%= server.id %>
            },
            success: (data, status, xhr) => {
              location.reload();
            },
            error: (xhr, status, error) => {
              alert('Something went wrong while trying to toggle country ban!');
            }
          });
        })

        $('#settings-reload-countryBan').click((event) => {
          event.preventDefault();

          newConfig = {
            enabled: true,
            bannedCountries: newCountries,
            kickMessage: $('#input-settings-countryBan-kickReason').val()
          }

          $.ajax({
            url: `/api/sdtdserver/reloadCountryBan`,
            type: "POST",
            data: {
              _csrf: window.SAILS_LOCALS._csrf,
              newConfig: newConfig,
              serverId: <%= server.id %>
            },
            success: (data, status, xhr) => {
              location.reload();
            },
            error: (xhr, status, error) => {
              alert('Something went wrong while trying to toggle country ban!');
            }
          });


        })

      })

    </script>
