<%- exposeLocalsToBrowser() %>

  <body>

    <div class="container-fluid">
      <h1>Player overview</h1>
      <% include ./partials/backToDashboard %>
        <div class="row">
          <button id="reload-players-btn" type="button" class="btn btn-primary">Update player data</button>
          <small>If you have a large server, this may take a while</small>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div id="loading-indicator"><i class="fa fa-cogs" aria-hidden="true"></i>Crunching the latest data. This page will reload when finished</div>
            <table id='players-overview' class="table display hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Entity ID</th>
                  <th>Steam ID</th>
                  <th>IP</th>
                  <th>Country</th>
                  <th>Playtime</th>
                  <th>Last online</th>
                  <th>Level</th>
                  <th>Score</th>
                  <th>Deaths</th>
                  <th>Players killed</th>
                  <th>Zombies killed</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
    </div>
  </body>


  <script>
    $(document).ready(function () {
      $('#loading-indicator').hide();

      let playerDataTable = $('#players-overview').DataTable({
        data: window.SAILS_LOCALS.players,
        dom: 'Bfrtip',
        fixedHeader: true,
        responsive: true,
        buttons: [
          'copy', 'excel', 'pdf', 'print'
        ],
        columns: [{
          data: "name",
          render: function (data, type, row, meta) {
            return `<a href="/player/${row.id}/profile">${data}</a>`;
          }
        },
        {
          data: 'entityId'
        },
        {
          data: 'steamId'
        },
        {
          data: 'ip'
        },
        {
          data: 'country',
          render: function (data, type, row, meta) {
            if (row.country) {
              let flagImg = `<img src="../../images/flags/blank.gif" class="flag flag-${row.country.toLowerCase()}"/>`
              return `${flagImg} ${row.country}`;
            } else {
              return `Unknown`
            }
          }
        },
        {
          data: 'playtime',
          render: function (data, type, row, meta) {
            return `${row.playtimeHHMMSS}`
          }
        },
        {
          data: 'lastOnline',
        },
        {
          data: 'level'
        },
        {
          data: 'score'
        },
        {
          data: 'deaths'
        },
        {
          data: 'playerKills'
        },
        {
          data: 'zombieKills'
        }

        ]
      });

      $('#reload-players-btn').click(e => {
        e.preventDefault();
        $('#players-overview').fadeOut();
        $('#loading-indicator').fadeIn();


        $.ajax({
          url: '/api/sdtdserver/players',
          data: {
            serverId: window.SAILS_LOCALS.server.id,
            onlyOnline: false
          },
          success: (data, status, xhr) => {
            window.location.reload();
          },
          error: (xhr, status, error) => {
            console.log(`Could not update players! error: ${error}`)
          }
        })
      })
    });

  </script>