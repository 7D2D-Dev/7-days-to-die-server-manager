        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="row">
    <div class="col-12" align='center'>
      <h2> Our partners: </h2>
      <br>
      <a href="/sponsors/ldh">
        <img src="../../images/meta/letsdohostinglogo.png" width="10%">
        <br> Lets DO Hosting
      </a>
    </div>
  </div>

</div>

<style>
  .feature-text {
    -webkit-text-stroke: 1px black;
    font-size: 200%;
  }

  h3 {
    font-size: 200%;
  }
</style>

<script>
  $(document).ready(e => {

    let discordHover = true;
    let dashboardHover = true;
    let playerOverviewHover = true;

    $('#img-feature-discord').hover(e => {
      let element = $('#img-feature-discord')
      discordHover = discordHover ? false : true;
      if (discordHover) {
        element.attr('src', "../../images/meta/feature-discord-blurred.png")        
      } else {
        element.attr('src', "../../images/meta/feature-discord.png")  
      }
    })
    
    $('#img-feature-dashboard').hover(e => {
      let element = $('#img-feature-dashboard')
      discordHover = discordHover ? false : true;
      if (discordHover) {
        element.attr('src', "../../images/meta/feature-dashboard-blurred.png")        
      } else {
        element.attr('src', "../../images/meta/feature-dashboard.png")  
      }
    })
    
    $('#img-feature-playerOverview').hover(e => {
      let element = $('#img-feature-playerOverview')
      discordHover = discordHover ? false : true;
      if (discordHover) {
        element.attr('src', "../../images/meta/feature-playerOverview-blurred.png")        
      } else {
        element.attr('src', "../../images/meta/feature-playerOverview.png")  
      }
    })


  })
</script>